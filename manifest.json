{
	"manifest_version": 2,
	"name": "Notifier for Rizzoma",
	"version": "0.1",
	"description": "Get notified of new messages in Rizzoma.",
	
	"options_page": "options.html",
	
	"background": {
		"page": "background.html",
		"persistent": false
	},
	
	"content_scripts": [{
		"matches": ["*://rizzoma.com/topic/*"],
		"js": ["scripts/riz_auth_content_script.js"],
		"all_frames": true
	}],
	
	"icons": {
		"48": "images/unread_3_48.png",
		"128": "images/unread_3_128.png"
	},
	
	"permissions": [
		"alarms",
		"background",
		"notifications",
		"tabs",
		"storage",
		"*://rizzoma.com/*"
	]
}
